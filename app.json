{
  "expo": {
    "name": "PulseChat",
    "slug": "pulsechat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "supportsTablet": true,
      "bundleIdentifier": "com.pulsechat",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app helps users find and connect with people nearby.",
        "NSCameraUsageDescription": "This app requires access to the camera to take photos.",
        "NSContactsUsageDescription": "This app requires access to your contacts to help you connect with people you know."
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "package": "com.pulsechat",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_CONTACTS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/crashlytics"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "bfd4b99d-180b-47de-a11e-d9ff41174105"
      }
    },
    "owner": "Hamza Ghenimi"
  }
}
